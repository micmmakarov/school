<div class=row>
  <div class="six columns">
<h3 style="color:green;">What was good? </h3>
<% if lesson.results.length == 2 %>
    <% result = lesson.results[0] %>
    <div class="comments comments_to_result_<%= result.id %>" data-type="<%= result.class.to_s.downcase %>" data-id="<%= result.id %>">
      <%= render :partial => "lessons/results", :locals => {:comment => result} %>
    </div>
<% end %>
<br>

  </div>
  <div class="six columns">

  <h3 style="color:red;">What was bad?</h3>

<% if lesson.results.length == 2 %>
    <% result = lesson.results[1] %>
    <div class="comments comments_to_result_<%= result.id %>" data-type="<%= result.class.to_s.downcase %>" data-id="<%= result.id %>">
      <%= render :partial => "lessons/results", :locals => {:comment => result} %>
    </div>
<% end %>

  </div>
</div>